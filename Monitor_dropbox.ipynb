    "import os\n",
    "import time\n",
    "\n",
    "maxlen = 0\n",
    "while True:\n",
    "    with os.popen(\"dropbox status\") as f:\n",
    "        txt = '\\r'+f.read()[:-1].replace('\\n',';  ')\n",
    "    maxlen = max(maxlen, len(txt))\n",
    "    print(txt, end=' ' * (maxlen - len(txt)))\n",
    "    time.sleep(1)"
   ]
